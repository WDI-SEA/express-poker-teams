<h1>Edit Player</h1>

<div class="row">
    <form class="col s12" method="POST" action="/players/<%=player.id%>?_method=PUT">
        <div class="row">
            <div class="input-field col s6">
                <input id="name" name="name" type="text" value="<%=player.name%>">
                <label for="name">Name</label>
            </div>
            <div class="input-field col s3">
                <input id="wins" name="wins" type="number" value="<%=player.wins%>">
                <label for="wins">Wins</label>
            </div>
            <div class="input-field col s3">
                <input id="losses" name="losses" type="number" value="<%=player.losses%>">
                <label for="losses">Losses</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s8">
                <input id="pic" name="pic" type="url" value="<%=player.pic%>">
                <label for="pic">Pic</label>
            </div>
            <div class="input-field col s4">
                <select name="teamId">
                    <% teams.forEach(t => { %>
                        <% if (t.id == player.teamId) { %>
                            <option value="<%=t.id%>" selected>
                                <%= t.name %>
                            </option>
                        <% } else { %>
                            <option value="<%=t.id%>">
                                <%= t.name %>
                            </option>
                        <% } %>
                    <% }) %>
                </select>
                <label>Team</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <textarea id="bio" name="bio" class="materialize-textarea"><%=player.bio%></textarea>
                <label for="bio">Bio</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light green" type="submit">Submit
            <i class="material-icons right">send</i>
        </button>
    </form>
</div>